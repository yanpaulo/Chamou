@model Chamou.Web.Models.Entities.Place

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm("Edit", "Places", FormMethod.Post, htmlAttributes: new { data_bind = "submit: submit" }))
{
    @*@Html.AntiForgeryToken()*@
    @Html.Hidden("JsonData", ViewBag.__Data as string)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", data_bind = "value: name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Local</label>
            <div class="col-md-10">
                <div id="searchBoxContainer">
                    <input type="text" id="searchBox" class="form-control" />
                    <span class="text-danger" data-bind="text: mapValidationMessage"></span>
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <div id="myMap" style='position:relative;width:400px;height:300px;'></div>
            </div>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar à Lista", "Index")
</div>

@section Scripts {
    <script type="text/javascript" src="~/Scripts/knockout-3.4.0.js"></script>

    <script type="text/javascript" src="~/Scripts/places/place.viewmodel.js"></script>
    <script type="text/javascript" src="~/Scripts/places/_app.js"></script>

    <script type="text/javascript" src="//www.bing.com/api/maps/mapcontrol?callback=GetMap" async defer></script>
    <script type="text/javascript" src="~/Scripts/places/maps.edit-config.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
}
